{
  "name": "robo-galactic-shooter",
  "version": "2.5.1",
  "description": "Retro Video Game developed in Kontra and sfxr JS libraries",
  "main": "src/index.ts",
  "author": "AshBardhan <ashbardhan@gmail.com>",
  "license": "MIT",
  "type": "module",
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "src/**/*.css": [
      "prettier --write --ignore-unknown",
      "stylelint --fix"
    ]
  },
  "scripts": {
    "dev": "vite --host",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "lint:css": "stylelint src/**/*.css",
    "lint:css:fix": "stylelint src/**/*.css --fix",
    "build": "npm run lint && vite build",
    "preview": "vite preview",
    "start": "vite preview --host",
    "postversion": "node update-version.js && git add -u && git commit --amend --no-edit && git push && git push --tags",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "kontra": "^10.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "3.4.2",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^39.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^6.0.0",
    "vite-plugin-checker": "^0.11.0"
  }
}
